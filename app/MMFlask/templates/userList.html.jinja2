{% include "header.html.jinja2" %}

<main>

    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1>List of Users <i class="fas fa-users"></i></h1>

            <div class="my-3 overflow_x_scroll">
                {% if items|length > 0 %}
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col" class="align-middle">ID</th>
                            <th scope="col" class="align-middle">Name</th>
                            <th scope="col" class="align-middle">Email</th>
                            <th scope="col" class="align-middle">Role</th>
                            <th scope="col" class="align-middle" width="1%"></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for item in items %}
                            <tr>
                                <th scope="row" class="align-middle">{{ item['user_uid'] }}</th>
                                <td class="align-middle">
                                    <span class="text-dark">{{ item['user_username'] }} </span>
                                    <span class="text-secondary">({{ item['user_first_name'] }} {{ item['user_last_name'] }})</span>
                                </td>
                                <td class="align-middle">{{ item['user_email'] }}</td>
                                <td class="align-middle">{{ item['user_role'] }}</td>
                                <td class="align-middle">
                                    <a class="btn btn-primary btn-sm" href="{{ item['user_uid'] }}/"
                                       role="button">Edit</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <p>No user registered.</p>
                {% endif %}
            </div>
            <div class="my-3">
                <a class="btn btn-success btn-lg btn-block" href="add/" role="button">Add User</a>
            </div>
        </div>

</main>

{% include "footer.html.jinja2" %}